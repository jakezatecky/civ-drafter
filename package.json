{
  "name": "civ-drafter",
  "version": "1.2.0",
  "description": "A modern, mobile-friendly drafting tool for Sid Meier's Civilization VI.",
  "main": "webpack.config.js",
  "scripts": {
    "build": "webpack",
    "build-prod": "cross-env NODE_ENV=production webpack && node ./scripts/generateSitemap.js",
    "deploy": "npm run release-prod --loglevel=error && aws s3 sync public s3://civdrafter --delete --profile civilization",
    "dev-server": "webpack serve",
    "release": "npm run test && npm run build",
    "release-prod": "npm run test && npm run build-prod",
    "test": "npm run test-script-format && npm run test-script-mocha && npm run test-style",
    "test-script-format": "eslint src/js/**/*.{js,jsx} test/**/*.{js,jsx} *.{js,jsx}",
    "test-script-mocha": "cross-env NODE_PATH=./src mocha test/**/*.{js,jsx}",
    "test-style": "stylelint src/scss/**/*.scss"
  },
  "author": "Jake Zatecky",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.11.2",
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.3.0-alpha1",
    "classnames": "^2.3.2",
    "html2canvas": "^1.4.1",
    "lodash": "^4.17.21",
    "marked": "^4.2.5",
    "prop-types": "^15.5.10",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "rgb2hex": "^0.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.14.4",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-loader": "^9.0.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "eslint": "^8.27.0",
    "eslint-config-takiyon-react": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-xml-parser": "^4.1.1",
    "global-jsdom": "^8.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^21.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.0.0",
    "postcss": "^8.4.20",
    "postcss-scss": "^4.0.6",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "sharp": "^0.31.3",
    "sinon": "^15.0.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.14.1",
    "stylelint-config-takiyon": "^2.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "workbox-webpack-plugin": "^6.5.4"
  }
}
